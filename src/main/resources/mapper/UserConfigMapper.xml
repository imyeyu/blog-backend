<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.imyeyu.blogapi.mapper.UserConfigMapper">
	<!-- 获取 -->
	<select id="findByUID" resultType="net.imyeyu.blogapi.entity.UserConfig" parameterType="long">
		SELECT * FROM `user_config` WHERE `user_id` = #{id} LIMIT 1
	</select>
	<!-- 新增 -->
	<insert id="create" parameterType="net.imyeyu.blogapi.entity.UserConfig" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
		INSERT INTO `user_config` (`user_id`) VALUES (#{userId})
	</insert>
	<!-- 更新 -->
	<update id="update" parameterType="net.imyeyu.blogapi.entity.UserConfig">
		<if test="id != null">
			UPDATE `user_config`
			<set>
				`user_id`            = #{userId},
				`email_reply_remind` = #{emailReplyRemind},
				`updated_at`         = #{updatedAt}
			</set>
			WHERE `user_id` = #{userId}
		</if>
	</update>
</mapper>