<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.imyeyu.blogapi.mapper.UserSettingsMapper">
	<!-- 新增 -->
	<insert id="create" parameterType="net.imyeyu.blogapi.entity.UserSettings" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
		INSERT INTO `user_settings` (`user_id`) VALUES (#{userId});
	</insert>
	<!-- 获取 -->
	<select id="find" resultType="net.imyeyu.blogapi.entity.UserSettings" parameterType="long">
		SELECT * FROM `user_settings` WHERE `user_id` = #{id}
	</select>
	<!-- 更新 -->
	<update id="update" parameterType="net.imyeyu.blogapi.entity.UserSettings">
		<if test="id != null">
			UPDATE `user_settings`
			<set>
				`user_id`            = #{userId},
				`email_notify_reply` = #{emailNotifyReply},
				`updated_at`         = #{updatedAt}
			</set>
			WHERE `id` = #{id}
		</if>
	</update>
</mapper>